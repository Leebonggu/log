{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2022,
    "sourceType": "module"
  },

  "extends": [
    "eslint:recommended",
    "plugin: @typescript-eslint/recommended",
    "next",
    "next/core-web-vitals",
    "plugin: prettier/recommended"
  ]
}
